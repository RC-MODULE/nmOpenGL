{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build all",
            "type": "shell",
            "group": "build",
            //"command": "scons",
            "dependsOn": [ "Build nm0", "Build nm1"],
        },
        {
            "label": "Build nm0",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "args": [ "nm0", "debug=1", "-j4", "${config:errecho}" ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Build nm1",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "args": [ "nm1", "debug=1", "-j4", "${config:errecho}" ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "args": [ "clean", "-j4" ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "run monitor",
            "type": "shell",
            "command": "nm_gdb_monitor.exe",
            //"args": [ "-d", "5","-t" ],
            "group": "test",
            "isBackground": true,
            "dependsOn": [ "run nm0", "run nm1" ],
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*target",
                    "endsPattern": ".*server listening on port.*"
                },
            },
        },
        {
            "label": "run nm",
            "type": "shell",
            "dependsOn": [ "run nm0", "run nm1" ]
        },
        {
            "label": "run nm0",
            "type": "shell",
            "command": "mc12101run",
            "group": "test",
            "isBackground": true,
            "dependsOn": [
                "Build nm0"
            ],
            "args": [
                "${workspaceFolder}/main0d.abs",
                "-a0",
                "-p"
            ],
            "problemMatcher": {
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Batch",
                    "endsPattern": "^Start"
                },
                "pattern": [
                    {
                        "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ]
            },
        },
        {
            "label": "run nm1",
            "type": "shell",
            "command": "mc12101run",
            "args": [
                "${workspaceFolder}/main1d.abs",
                "-a1",
                "-p"
            ],
            "group": "test",
            "isBackground": true,
            "dependsOn": [
                "Build nm1"
            ],
            "problemMatcher": {
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Batch",
                    "endsPattern": "^Start"
                },
                "pattern": [
                    {
                        "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ]
            }
        },
        {
            "label": "run nm0-qemu",
            "type": "shell",
            "command": "d:\\download\\NMC_Mingw\\bin\\nmc-qemu.exe",
            "group": "test",
            "isBackground": false,
            "dependsOn": [
                "Build nm0"
            ],
            "args": [
                "-g",
                "10000",
                "${workspaceFolder}/main0d.abs"
            ]
        },
        {
            "label": "run nm1-qemu",
            "type": "shell",
            "command": "nmc-qemu.exe",
            "args": [
                "-g",
                "10001",
                "${workspaceFolder}/main1d.abs",
                "&"
            ],
            "group": "test",
            "isBackground": true,
            "dependsOn": [
                "Build nm1"
            ],
            "problemMatcher": {
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Batch",
                    "endsPattern": "^Start"
                },
                "pattern": [
                    {
                        "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ]
            }
        },




        {
            "label": "load_program",
            "command": "mc12101run.exe main0.abs  ",
            "isBackground": true,
            "type": "shell",
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": [
                    {
                        "regexp": "^(.*)\\s+::\\s+(warning|ERROR):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "."
                }
            },
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true
            }
        },
        {
            "label": "timeout",
            "command": "timeout 2",
            "type": "shell"
        },
        {
            "label": "monitor",
            "command": "nm_gdb_monitor.exe",
            "isBackground": true,
            "type": "shell",
            "dependsOn": [
                "timeout"
            ],
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": [
                    {
                        "regexp": "^(.*)\\s+(warning|ERROR)\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "."
                }
            },
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true
            }
        },
        {
            "label": "test_plugin2_run",
            "type": "shell",
            "dependsOn": [
                "load_program",
                "monitor"
            ]
        }
    ]
}